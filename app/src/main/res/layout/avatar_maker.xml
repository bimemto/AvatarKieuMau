<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duyota.standardavatar.MainActivity">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.duyota.standardavatar.RatioImageView
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F40008" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/red"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/roll" />

        <RelativeLayout
            android:id="@+id/fake"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/red"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fake"
            android:layout_marginBottom="-50dp">

            <TextView
                android:id="@+id/tvBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:text="Title 1"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/tvSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tvBig"
                android:layout_below="@+id/tvBig"
                android:maxLines="1"
                android:text="Title 2"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
